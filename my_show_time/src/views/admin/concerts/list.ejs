<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Concerts</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<%- include('../../partials/header'); %>
<aside class="w-full lg:w-64 bg-white shadow-md flex flex-col lg:fixed lg:left-0 lg:h-screen z-40">
    <nav
        class="flex flex-row lg:flex-col p-2 sm:p-4 space-x-2 lg:space-x-0 lg:space-y-2 overflow-x-auto lg:overflow-x-visible">

        <a href="/users" class="flex-shrink-0 lg:flex-shrink">
            <div
                class="flex items-center justify-center gap-2 sm:gap-3 bg-[#FF214F] text-white rounded-lg sm:rounded-xl p-2 sm:p-3 min-w-[120px] lg:min-w-0 hover:bg-[#f83159ff] transition-colors">
                <h3 class="text-white text-sm sm:text-base whitespace-nowrap">Users</h3>
            </div>
        </a>

        <a href="/concerts/admin" class="flex-shrink-0 lg:flex-shrink">
            <div
                class="flex items-center justify-center gap-2 sm:gap-3 bg-[#FF214F] text-white rounded-lg sm:rounded-xl p-2 sm:p-3 min-w-[120px] lg:min-w-0 hover:bg-[#f83159ff] transition-colors">
                <h3 class="text-white text-sm sm:text-base whitespace-nowrap">Concerts</h3>
            </div>
        </a>

        <a href="/groups" class="flex-shrink-0 lg:flex-shrink">
            <div
                class="flex items-center justify-center gap-2 sm:gap-3 bg-[#FF214F] text-white rounded-lg sm:rounded-xl p-2 sm:p-3 min-w-[120px] lg:min-w-0 hover:bg-[#f83159ff] transition-colors">
                <h3 class="text-white text-sm sm:text-base whitespace-nowrap">Bands</h3>
            </div>
        </a>
    </nav>
</aside>

<main class="flex-1 lg:ml-64 p-4 sm:p-6 overflow-y-auto">

    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-lg md:text-2xl font-bold">All Concerts</h1>
        </div>

        <a href="/concerts/create">
            <button
                class="bg-[#FF214F] hover:bg-[#f83159ff] cursor-pointer text-white text-sm md:text-lg px-2 py-1 md:px-4 md:py-2 rounded-lg shadow hover:opacity-90 transition">
                + Add Concert
            </button>
        </a>
    </div>

    <!-- Desktop Table -->
    <section class="hidden xl:block bg-white shadow rounded-2xl p-6">
        <table class="w-full text-sm text-left border-collapse">
            <thead class="bg-[#FF214F] text-white rounded-t-xl">
                <tr>
                    <th class="px-6 py-3 font-semibold">Name</th>
                    <th class="px-6 py-3 font-semibold">Bands</th>
                    <th class="px-6 py-3 font-semibold">Date</th>
                    <th class="px-6 py-3 font-semibold">Location</th>
                    <th class="px-6 py-3 font-semibold">Price</th>
                    <th class="px-6 py-3 font-semibold">Seats</th>
                    <th class="px-6 py-3 font-semibold">Genre</th>
                    <th class="px-6 py-3 font-semibold">Actions</th>
                </tr>
            </thead>

            <tbody>
                <% if (concerts && concerts.length> 0) { %>
                    <% concerts.forEach(concert=> { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
                            <td class="px-6 py-3 text-gray-800 font-medium">
                                <%= concert.name %>
                            </td>
                            <td class="px-6 py-3 text-gray-600">
                                <% if (concert.groups && concert.groups.length> 0) { %>
                                    <div class="flex flex-wrap gap-1">
                                        <% concert.groups.forEach(group=> { %>
                                            <span class="px-2 py-0.5 bg-blue-100 text-blue-800 rounded text-xs">
                                                <%= group.name %>
                                            </span>
                                            <% }); %>
                                    </div>
                                    <% } else { %>
                                        <span class="text-gray-400 text-xs">No bands</span>
                                        <% } %>
                            </td>
                            <td class="px-6 py-3 text-gray-600">
                                <%= new Date(concert.date).toLocaleDateString('en-US', { year: 'numeric' , month: 'short' ,
                                    day: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                            </td>
                            <td class="px-6 py-3 text-gray-600">
                                <%= concert.location %>
                            </td>
                            <td class="px-6 py-3 text-gray-800 font-semibold">$<%= concert.price %>
                            </td>
                            <td class="px-6 py-3">
                                <div class="text-sm">
                                    <div class="text-gray-800">
                                        <%= concert.availableSeats %> / <%= concert.totalSeats %>
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        <%= Math.round((concert.totalSeats - concert.availableSeats) / concert.totalSeats *
                                            100) %>% sold
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-3">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800">
                                    <%= concert.genre %>
                                </span>
                            </td>
                            <td class="px-6 py-3">
                                <div class="flex gap-2">
                                    <a href="/concerts/<%= concert.id %>/edit"
                                        class="bg-black cursor-pointer text-white px-3 py-1 rounded hover:opacity-90">
                                        Edit
                                    </a>
                                    <button onclick="confirmDelete('concerts', '<%= concert.id %>', '<%= concert.name %>')"
                                        class="cursor-pointer bg-red-600 hover:bg-red-700 cursor-pointer text-white px-3 py-1 rounded hover:opacity-90">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8" class="text-center py-6 text-gray-500">
                            No concerts found
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </section>

    <!-- Mobile Cards -->
    <div class="block xl:hidden space-y-3 sm:space-y-4">
        <% if (!concerts || concerts.length===0) { %>
            <div class="bg-white rounded-2xl shadow p-6 sm:p-8 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 sm:h-16 sm:w-16 mx-auto mb-3 sm:mb-4 text-gray-400"
                    fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                </svg>
                <p class="text-sm sm:text-base text-gray-500">No concerts found</p>
            </div>
            <% } else { %>
                <% concerts.forEach(concert=> { %>
                    <div
                        class="bg-white rounded-xl shadow p-4 sm:p-5 border border-gray-100 hover:shadow-md transition-shadow">

                        <!-- Header -->
                        <div class="flex items-start justify-between mb-3">
                            <div class="flex-1 min-w-0">
                                <h3 class="text-base sm:text-lg font-semibold text-gray-900">
                                    <%= concert.name %>
                                </h3>
                                <p class="text-xs text-gray-500 mt-1">
                                    üìç <%= concert.location %>
                                </p>
                            </div>
                            <span
                                class="ml-2 px-2.5 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800 whitespace-nowrap flex-shrink-0">
                                <%= concert.genre %>
                            </span>
                        </div>

                        <!-- Bands -->
                        <% if (concert.groups && concert.groups.length> 0) { %>
                            <div class="mb-3 flex flex-wrap gap-1">
                                <% concert.groups.forEach(group=> { %>
                                    <span class="px-2 py-0.5 bg-blue-100 text-blue-800 rounded text-xs">
                                        <%= group.name %>
                                    </span>
                                <% }); %>
                            </div>
                        <% } %>

                        <!-- Info -->
                        <div class="grid grid-cols-2 gap-3 mb-3 text-xs sm:text-sm">
                            <div class="text-gray-600">
                                <span class="font-medium">Date:</span>
                                <%= new Date(concert.date).toLocaleDateString('en-US', { month: 'short' ,
                                    day: 'numeric' , year: 'numeric' }) %>
                            </div>
                            <div class="text-gray-600">
                                <span class="font-medium">Price:</span>
                                <span class="text-gray-800 font-semibold">$<%= concert.price %></span>
                            </div>
                            <div class="text-gray-600 col-span-2">
                                <span class="font-medium">Seats:</span>
                                <%= concert.availableSeats %> / <%= concert.totalSeats %>
                                    <span class="text-xs text-gray-500">
                                        (<%= Math.round((concert.totalSeats - concert.availableSeats) /
                                            concert.totalSeats * 100) %>% sold)
                                    </span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="flex flex-col sm:flex-row gap-2 pt-3 border-t border-gray-200">
                            <a href="/concerts/<%= concert.id %>/edit"
                                class="flex-1 text-center bg-[#ff5200] hover:bg-[#ff7533] text-white px-3 py-2 rounded-lg text-xs sm:text-sm font-medium transition-colors">
                                Edit
                            </a>
                            <button onclick="confirmDelete('concerts', '<%= concert.id %>', '<%= concert.name %>')"
                                class="cursor-pointer flex-1 bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-lg text-xs sm:text-sm font-medium transition-colors cursor-pointer">
                                Delete
                            </button>
                        </div>
                    </div>
                <% }); %>
            <% } %>
    </div>
</main>

<script>
    function confirmDelete(type, id, name) {
        if (confirm(`Are you sure you want to delete "${name}" ?\n\nThis action is irreversible.`)) {
            const button = event.target;
            const originalText = button.innerHTML;
            button.disabled = true;
            button.innerHTML = 'Deletion...';
            button.classList.add('opacity-50', 'cursor-not-allowed');

            fetch(`http://localhost:3000/concerts/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                console.log(response.status);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log(data);
                if (data.success) {
                    alert('Deletion successful!');
                    window.location.reload();
                } else {
                    throw new Error('Deletion failed');
                }
            })
            .catch(error => {
                console.error('Error', error);
                alert('Error while deleting. Please try again.');
                
                button.disabled = false;
                button.innerHTML = originalText;
                button.classList.remove('opacity-50', 'cursor-not-allowed');
            });
        }
    }
</script>