<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filter Concerts</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-50">
    <div class="min-h-screen p-4 sm:p-6">
        <!-- Header -->
        <div class="max-w-7xl mx-auto mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl md:text-3xl font-bold text-[#19634C]">Filter Concerts</h1>
                    <p class="text-gray-600 mt-1">Search and filter concerts by various criteria</p>
                </div>
                <a href="/concerts" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition">
                    Back to List
                </a>
            </div>
        </div>

        <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-4 gap-6">

            <!-- Sidebar Filters -->
            <aside class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow p-6 sticky top-6">
                    <h2 class="text-lg font-bold text-gray-800 mb-4">Filters</h2>

                    <form action="/concerts/search" method="GET" class="space-y-4">

                        <!-- Search -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                            <input type="text" name="search" value="<%= filters.search || '' %>"
                                placeholder="Concert name..."
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#19634C] focus:border-transparent" />
                        </div>

                        <!-- Genre -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Genre</label>
                            <select name="genre"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#19634C] focus:border-transparent cursor-pointer">
                                <option value="">All Genres</option>
                                <option value="ROCK" <%=filters.genre==='ROCK' ? 'selected' : '' %>>Rock</option>
                                <option value="POP" <%=filters.genre==='POP' ? 'selected' : '' %>>Pop</option>
                                <option value="JAZZ" <%=filters.genre==='JAZZ' ? 'selected' : '' %>>Jazz</option>
                                <option value="ELECTRONIC" <%=filters.genre==='ELECTRONIC' ? 'selected' : '' %>
                                    >Electronic</option>
                                <option value="HIP_HOP" <%=filters.genre==='HIP_HOP' ? 'selected' : '' %>>Hip Hop
                                </option>
                                <option value="CLASSICAL" <%=filters.genre==='CLASSICAL' ? 'selected' : '' %>>Classical
                                </option>
                                <option value="METAL" <%=filters.genre==='METAL' ? 'selected' : '' %>>Metal</option>
                                <option value="INDIE" <%=filters.genre==='INDIE' ? 'selected' : '' %>>Indie</option>
                                <option value="OTHER" <%=filters.genre==='OTHER' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>

                        <!-- Group/Band -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Group</label>
                            <select name="groupId" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#19634C] focus:border-transparent cursor-pointer">
                                <option value="">All Bands</option>
                                <% if (groups && groups.length> 0) { %>
                                    <% groups.forEach(group=> { %>
                                        <option value="<%= group.id %>" <%=filters.groupId===group.id ? 'selected' : ''
                                            %>>
                                            <%= group.name %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>

                        <!-- Date Range -->
                        <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Date From</label>
    <input type="date" name="dateFrom"
        value="<%= filters.dateFrom %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#19634C] focus:border-transparent cursor-pointer" />
</div>

<div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Date To</label>
    <input type="date" name="dateTo"
        value="<%= filters.dateTo %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#19634C] focus:border-transparent cursor-pointer" />
</div>

                        <!-- Buttons -->
                        <div class="space-y-2 pt-4">
                            <button type="submit"
                                class="w-full px-4 py-2 bg-[#19634C] text-white rounded-lg hover:bg-[#145a43] transition cursor-pointer">
                                Apply Filters
                            </button>
                            <a href="/concerts/filter"
                                class="block w-full px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-center">
                                Clear Filters
                            </a>
                        </div>
                    </form>
                </div>
            </aside>

            <!-- Results -->
            <main class="lg:col-span-3">
                <div class="bg-white rounded-xl shadow p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-xl font-bold text-gray-800">
                            Results
                            <% if (concerts && concerts.length> 0) { %>
                                <span class="text-[#19634C]">(<%= pagination.total %> found)</span>
                            <% } %>
                        </h2>
                    </div>

                    <% if (!concerts || concerts.length===0) { %>
                        <!-- Empty State -->
                        <div class="text-center py-12">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4"
                                fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                            </svg>
                            <h3 class="text-lg font-medium text-gray-900 mb-1">No concerts found</h3>
                            <p class="text-gray-500">Try adjusting your filters or search criteria</p>
                        </div>
                        <% } else { %>
                            <!-- Concert Cards -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <% concerts.forEach(concert=> { %>
                                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-lg transition">
                                        <% if (concert.image) { %>
                                            <img src="<%= concert.image %>" alt="<%= concert.name %>"
                                                class="w-full h-32 object-cover rounded-lg mb-3">
                                            <% } %>

                                                <div class="flex items-start justify-between mb-2">
                                                    <h3 class="text-lg font-semibold text-gray-900">
                                                        <%= concert.name %>
                                                    </h3>
                                                    <span
                                                        class="px-2 py-1 bg-purple-100 text-purple-800 rounded text-xs font-semibold">
                                                        <%= concert.genre %>
                                                    </span>
                                                </div>

                                                <% if (concert.groups && concert.groups.length> 0) { %>
                                                    <div class="mb-2 flex flex-wrap gap-1">
                                                        <% concert.groups.forEach(group=> { %>
                                                            <span
                                                                class="px-2 py-0.5 bg-blue-100 text-blue-800 rounded text-xs">
                                                                <%= group.name %>
                                                            </span>
                                                        <% }); %>
                                                    </div>
                                                <% } %>

                                                <div class="space-y-1 text-sm text-gray-600 mb-3">
                                                    <p>üìÖ <%= new Date(concert.date).toLocaleDateString('en-US',
                                                            { weekday: 'short' , year: 'numeric' ,
                                                            month: 'short' , day: 'numeric' , hour: '2-digit' ,
                                                            minute: '2-digit' }) %>
                                                    </p>
                                                    <p>üìç <%= concert.location %>
                                                    </p>
                                                    <p>üí∂ $<%= concert.price %>
                                                    </p>
                                                    <p>üé´ <%= concert.availableSeats %> / <%= concert.totalSeats
                                                                %> seats available</p>
                                                </div>

                                                <a href="/concerts/<%= concert.id %>"
                                                    class="block w-full text-center px-4 py-2 bg-[#ff5200] text-white rounded-lg hover:bg-[#ff7533] transition">
                                                    View Details
                                                </a>
                                    </div>
                                    <% }); %>
                            </div>

                            <!-- Pagination -->
                            <% if (pagination && pagination.totalPages> 1) { %>
                                <div class="flex justify-center items-center gap-2 mt-6">
                                    <% if (pagination.page> 1) { %>
                                        <a href="?page=<%= pagination.page - 1 %>&<%= new URLSearchParams(filters).toString() %>"
                                            class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100">
                                            Previous
                                        </a>
                                        <% } %>

                                            <span class="px-3 py-1 text-gray-700">
                                                Page <%= pagination.page %> of <%= pagination.totalPages %>
                                            </span>

                                            <% if (pagination.page < pagination.totalPages) { %>
                                                <a href="?page=<%= pagination.page + 1 %>&<%= new URLSearchParams(filters).toString() %>"
                                                    class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100">
                                                    Next
                                                </a>
                                                <% } %>
                                </div>
                                <% } %>
                                    <% } %>
                </div>
            </main>

        </div>
    </div>
</body>
</html>