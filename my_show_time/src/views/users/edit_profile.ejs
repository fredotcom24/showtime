<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - ShowTime</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-950 via-purple-950 to-indigo-900">
    
    <!-- Navigation -->
    <nav class="bg-white/10 backdrop-blur-md border-b border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/" class="flex items-center gap-2 text-white font-bold text-xl">
                    <i class="fas fa-music"></i>
                    ShowTime
                </a>
                <div class="flex items-center gap-4">
                    <a href="/users/<%= user.id %>/profile" class="text-white hover:text-gray-200 transition-colors">
                        <i class="fas fa-user mr-2"></i>Profile
                    </a>
                    <% if ( user ) { %>
                        <a href="/auth/logout">logout</a> 
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
        <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl p-6 md:p-10">
            
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Profile</h1>
                <p class="text-gray-600">Update your personal information</p>
            </div>

            <!-- Error Message -->
            <% if (errors && errors.message) { %>
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl flex items-start gap-3">
                    <i class="fas fa-exclamation-circle text-red-500 mt-0.5"></i>
                    <p class="text-sm text-red-700"><%= errors.message %></p>
                </div>
            <% } %>

            <form action="/users/<%= user.id %>/profile/edit" method="POST" enctype="multipart/form-data">
                
                <!-- Profile Picture -->
                <div class="mb-6 text-center">
                    <div class="mb-4">
                        <% if (user && user.image) { %>
                            <img src="<%= user.image %>" alt="Profile" id="preview" class="w-32 h-32 rounded-full object-cover border-4 border-gray-200 mx-auto">
                        <% } else { %>
                            <div id="preview" class="w-32 h-32 rounded-full flex items-center justify-center text-4xl text-white font-bold mx-auto" style="background-color: #FF214F;">
                                <%= user && user.username ? user.username.charAt(0).toUpperCase() : 'U' %>
                            </div>
                        <% } %>
                    </div>
                    
                    <label class="cursor-pointer inline-block">
                        <span style="background-color: #FF214F;" class="px-6 py-2 text-white rounded-lg font-semibold hover:opacity-90 transition-all inline-block">
                            <i class="fas fa-camera mr-2"></i>Change Photo
                        </span>
                        <input type="file" name="profile" id="profile" accept="image/*" class="hidden" onchange="previewImage(event)">
                    </label>
                    <p class="text-xs text-gray-500 mt-2">JPG, PNG or GIF (max 5MB)</p>
                </div>

                <!-- Username -->
                <div class="mb-5">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                    <input 
                        type="text" 
                        name="username" 
                        value="<%= user && user.username ? user.username : '' %>"
                        placeholder="Your username"
                        required
                        minlength="3"
                        class="w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
                    >
                </div>

                <!-- Email -->
                <div class="mb-5">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input 
                        type="email" 
                        name="email" 
                        value="<%= user && user.email ? user.email : '' %>"
                        placeholder="you@example.com"
                        required
                        class="w-full px-4 py-3.5 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
                    >
                </div>

                <!-- Actions -->
                <div class="flex gap-4">
                    <button 
                        type="submit"
                        style="background-color: #FF214F;"
                        class="flex-1 text-white py-3.5 rounded-xl font-semibold hover:opacity-90 transition-all shadow-lg"
                    >
                        <i class="fas fa-save mr-2"></i>Save Changes
                    </button>
                </div>
            </form>

        </div>
    </div>

    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = '';
                    preview.style.backgroundImage = 'none';
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'w-32 h-32 rounded-full object-cover border-4 border-gray-200';
                    preview.appendChild(img);
                }
                reader.readAsDataURL(file);
            }
        }
    </script>

</body>
</html>
